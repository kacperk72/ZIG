<Window x:Class="ZIGapp.NewBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nowa książka" Height="250" Width="300">
    <StackPanel Margin="10">
        <Label>Tytuł:</Label>
        <TextBox x:Name="TitleTextBox" />
        <Label>Autor:</Label>
        <TextBox x:Name="AuthorTextBox" />
        <Label>Rok wydania:</Label>
        <TextBox x:Name="YearTextBox" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Anuluj" Click="CancelButton_Click" Width="75" Margin="0,0,10,0" />
            <Button Content="Zapisz" Click="SaveButton_Click" Width="75" />
        </StackPanel>
    </StackPanel>
</Window>
